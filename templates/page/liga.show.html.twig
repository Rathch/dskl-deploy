{% extends 'page/layout.html.twig' %}

{% block title %}Blog Index{% endblock %}

{% block page_contents %}
    <a href="/liga/list" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
        </svg>
    </a>
    <h2 class="text-center">Liga {{ liga.seasonName }}</h2>
    {% for playday in liga.playdays %}
        {% dump(playday) %}
    {% endfor %}

    {% set foo ="#6eb493"  %}
    {% set bar ="#cb5858"  %}
    <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1" aria-expanded="false" aria-controls="collapse-1">
                        Statistic - {{ liga.seasonName }}
                    </button>
                </h2>
                <div id="collapse-1" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th colspan="3" style="background-color:{{ foo }}">Verletzungen verursacht</th>
                                <th colspan="3" style="background-color:{{ bar }}">Verletzungen erlitten</th>
                            </tr>
                            <tr>
                                <th>Mannschaft</th>
                                <th>Punkte</th>
                                <th>S</th>
                                <th>U</th>
                                <th>N</th>
                                <th>Tordifferenz</th>
                                <th>Tore</th>
                                <th>Gegentore</th>
                                <th style="background-color:{{ foo }}">Leicht</th>
                                <th style="background-color:{{ foo }}">Schwer</th>
                                <th style="background-color:{{ foo }}">Kritisch</th>
                                <th style="background-color:{{ bar }}">Leicht</th>
                                <th style="background-color:{{ bar }}">Schwer</th>
                                <th style="background-color:{{ bar }}">Kritisch</th>
                                <th>Chancenverh√§ltnis</th>
                                <th style="background-color:{{ foo }}">Kills</th>
                                <th style="background-color:{{ bar }}">Tode</th>
                                <th>Chancenverwertung</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for statistic in liga.teamStatistics %}
                                <tr class="{{ loop.index is  even ? 'lightBlue' }}">
                                    <td>{{ statistic.team.name }}</td>
                                    <td>{{ statistic.points }}</td>
                                    <td>{{ statistic.wins }}</td>
                                    <td>{{ statistic.drows }}</td>
                                    <td>{{ statistic.loss }}</td>
                                    <td>{{ statistic.goaleDifference }}</td>
                                    <td>{{ statistic.goales }}</td>
                                    <td>{{ statistic.reGoeals }}</td>
                                    <td style="background-color:{{ foo }}">{{ statistic.injuriesDoneLeich }}</td>
                                    <td style="background-color:{{ foo }}">{{ statistic.injurysDoneSchwer }}</td>
                                    <td style="background-color:{{ foo }}">{{ statistic.injurysDoneKritisch }}</td>
                                    <td style="background-color:{{ bar }}">{{ statistic.injuriesGetLeich }}</td>
                                    <td style="background-color:{{ bar }}">{{ statistic.injurysGetSchwer }}</td>
                                    <td style="background-color:{{ bar }}">{{ statistic.injurysGetKritisch }}</td>
                                    <td>{{ statistic.opportunities }} - {{ statistic.opportunitiesOpponent }}</td>
                                    <td style="background-color:{{ foo }}">{{ statistic.kills }}</td>
                                    <td style="background-color:{{ bar }}">{{ statistic.deaths }}</td>
                                    <td>{{ statistic.oddsRatio }}%</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}