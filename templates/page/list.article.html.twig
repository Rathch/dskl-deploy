{% extends 'page/layout.html.twig' %}

{% block title %}Wipeout!-Magazin{% endblock %}

{% block page_contents %}
    <h2 class="text-center">WIPEOUT! -
        DAS STADTKRIEG-MAGAZIN</h2>
    <div class="accordion accordion-flush" id="accordionFlushExample">
   
    {% for article in articles %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading{{ article.id }}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ article.id }}" aria-expanded="false" aria-controls="flush-collapse{{ article.id }}">
                    <h2 class="mb-0">{{ article.title }}</h2>
                </button>
            </h2>
            <div id="flush-collapse{{ article.id }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ article.id }}" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <table class="table table-striped" id="sortTable">
                        <tbody>
                        <tr>
                            <td>
                                <div class="accordion accordion-flush" id="accordionFlushExample2">
                                    {{ article.description|raw }}
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}