<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
{% set foo ="#6eb493"  %}
{% set bar ="#cb5858"  %}
<div class="accordion" id="accordionExample">
    {% for statistics in teamstatistics %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{loop.index}}" aria-expanded="false" aria-controls="collapse-{{loop.index}}">
                    {{loop.index}} - {{ statistics.0.league.date|date("Y") }}
                </button>
            </h2>
            <div id="collapse-{{loop.index}}" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th colspan="3" style="background-color:{{ foo }}">Verletzungen verursacht</th>
                            <th colspan="3" style="background-color:{{ bar }}">Verletzungen erlitten</th>
                        </tr>
                        <tr>
                            <th>Mannschaft</th>
                            <th>Punkte</th>
                            <th>S</th>
                            <th>U</th>
                            <th>N</th>
                            <th>Tordifferenz</th>
                            <th>Tore</th>
                            <th>Gegentore</th>
                            <th style="background-color:{{ foo }}">Leicht</th>
                            <th style="background-color:{{ foo }}">Schwer</th>
                            <th style="background-color:{{ foo }}">Kritisch</th>
                            <th style="background-color:{{ bar }}">Leicht</th>
                            <th style="background-color:{{ bar }}">Schwer</th>
                            <th style="background-color:{{ bar }}">Kritisch</th>
                            <th>Chancenverh√§ltnis</th>
                            <th style="background-color:{{ foo }}">Kills</th>
                            <th style="background-color:{{ bar }}">Tode</th>
                            <th>Chancenverwertung</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for statistic in statistics %}
                            <tr class="{{ loop.index is  even ? 'lightBlue' }}">
                                <td>{{ statistic.team.name }}</td>
                                <td>{{ statistic.points }}</td>
                                <td>{{ statistic.wins }}</td>
                                <td>{{ statistic.drows }}</td>
                                <td>{{ statistic.loss }}</td>
                                <td>{{ statistic.goaleDifference }}</td>
                                <td>{{ statistic.goales }}</td>
                                <td>{{ statistic.reGoeals }}</td>
                                <td style="background-color:{{ foo }}">{{ statistic.injuriesDoneLeich }}</td>
                                <td style="background-color:{{ foo }}">{{ statistic.injurysDoneSchwer }}</td>
                                <td style="background-color:{{ foo }}">{{ statistic.injurysDoneKritisch }}</td>
                                <td style="background-color:{{ bar }}">{{ statistic.injuriesGetLeich }}</td>
                                <td style="background-color:{{ bar }}">{{ statistic.injurysGetSchwer }}</td>
                                <td style="background-color:{{ bar }}">{{ statistic.injurysGetKritisch }}</td>
                                <td>{{ statistic.opportunities }} - {{ statistic.opportunitiesOpponent }}</td>
                                <td style="background-color:{{ foo }}">{{ statistic.kills }}</td>
                                <td style="background-color:{{ bar }}">{{ statistic.deaths }}</td>
                                <td>{{ statistic.oddsRatio }}%</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('team.statistic.regenerate') }}" class="btn btn-warning btn-lg square" role="button">Regenerate</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>